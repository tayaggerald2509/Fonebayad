<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashboard_color">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/dashboard" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_margin_max"
                android:paddingTop="@dimen/activity_margin_max">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_min_padding"
                    android:layout_marginRight="@dimen/activity_min_padding"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_min_padding"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_overdue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/white"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <LinearLayout
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ic_dashboard_overdue"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    android:paddingBottom="@dimen/shape_padding_TopBottom"
                                    android:paddingLeft="@dimen/shape_padding_LeftRight"
                                    android:paddingRight="@dimen/shape_padding_LeftRight"
                                    android:paddingTop="@dimen/shape_padding_TopBottom">

                                    <ImageView
                                        android:id="@+id/imageView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_warning" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/activity_margin_min"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/lblOverDue"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:singleLine="true"
                                            android:text="OVERDUE"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@color/color_overdue"
                                            android:textSize="@dimen/abc_text_size_small_material" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:id="@+id/imageView3"
                                                android:layout_width="@dimen/min_icon_size"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/ic_hardware_keyboard_arrow_right" />
                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="@dimen/md_title_frame_margin_bottom"
                                        android:layout_marginLeft="@dimen/activity_margin_min"
                                        android:layout_marginRight="@dimen/activity_margin_min"
                                        android:gravity="right"
                                        android:orientation="horizontal">


                                        <TextView
                                            android:id="@+id/lbl_currency_overdue"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="bottom"
                                            android:layout_marginRight="@dimen/activity_margin_min"
                                            android:gravity="center_vertical"
                                            android:text="PHP"
                                            android:textColor="@android:color/black"
                                            android:textSize="@dimen/text_currency" />

                                        <estansaas.fonebayad.view.AutofitTextView
                                            android:id="@+id/txtOverdue"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="bottom|right"
                                            android:singleLine="true"
                                            android:text="0.00"
                                            android:textColor="@android:color/black"
                                            android:textSize="@dimen/abc_text_size_menu_material"
                                            autofit:minTextSize="8sp" />

                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_week"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/activity_min_padding"
                                android:background="@android:color/white"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ic_dashboard_week"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    android:padding="@dimen/shape_padding_LeftRight">

                                    <ImageView
                                        android:id="@+id/imageView2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_calendar" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/activity_margin_min"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/lblWeek"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:singleLine="true"
                                            android:text="THIS WEEK"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@color/color_week"
                                            android:textSize="@dimen/abc_text_size_small_material" />

                                        <ImageView
                                            android:id="@+id/imageView2"
                                            android:layout_width="@dimen/min_icon_size"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_hardware_keyboard_arrow_right" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="@dimen/md_title_frame_margin_bottom"
                                        android:layout_marginLeft="@dimen/activity_margin_min"
                                        android:layout_marginRight="@dimen/activity_margin_min"
                                        android:gravity="right"
                                        android:orientation="horizontal">


                                        <TextView
                                            android:id="@+id/lbl_currency_week"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="bottom"
                                            android:layout_marginRight="@dimen/activity_margin_min"
                                            android:gravity="center"
                                            android:text="PHP"
                                            android:textColor="@android:color/black"
                                            android:textSize="@dimen/text_currency" />


                                        <estansaas.fonebayad.view.AutofitTextView
                                            android:id="@+id/txtWeek"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="bottom|right"
                                            android:singleLine="true"
                                            android:text="0.00"
                                            android:textColor="@android:color/black"
                                            android:textSize="@dimen/abc_text_size_menu_material"
                                            autofit:minTextSize="8sp" />
                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_calendar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:background="@drawable/date_shape"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/activity_margin_min">


                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <estansaas.fonebayad.view.AutofitTextView
                                    android:id="@+id/txtDay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="@dimen/activity_margin_min"
                                    android:layout_marginRight="@dimen/activity_margin_min"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="Thursday"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/abc_text_size_headline_material"
                                    android:textStyle="bold"
                                    autofit:minTextSize="8sp" />

                                <estansaas.fonebayad.view.AutofitTextView
                                    android:id="@+id/txtDateDay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="15"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/date_day"
                                    android:textStyle="bold"
                                    autofit:minTextSize="8sp" />

                                <estansaas.fonebayad.view.AutofitTextView
                                    android:id="@+id/txtMonth"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="false"
                                    android:layout_below="@+id/txtDateDay"
                                    android:layout_centerHorizontal="true"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="September"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/abc_text_size_medium_material"
                                    android:textStyle="bold"
                                    autofit:minTextSize="8sp"
                                    android:layout_marginLeft="@dimen/activity_margin_min"
                                    android:layout_marginRight="@dimen/activity_margin_min" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <estansaas.fonebayad.view.AutofitTextView
                                    android:id="@+id/txtDay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Monday"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/abc_text_size_headline_material"
                                    android:textStyle="bold"
                                    autofit:minTextSize="8sp" />

                                <estansaas.fonebayad.view.AutofitTextView
                                    android:id="@+id/txtDateDay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="15"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/date_day"
                                    android:textStyle="bold"
                                    autofit:minTextSize="8sp" />

                                <estansaas.fonebayad.view.AutofitTextView
                                    android:id="@+id/txtMonth"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="September"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/abc_text_size_medium_material"
                                    android:textStyle="bold"
                                    autofit:minTextSize="8sp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_total_due"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_dashboard_total"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/shape_padding_TopBottom"
                            android:paddingLeft="@dimen/shape_padding_LeftRight"
                            android:paddingRight="@dimen/shape_padding_LeftRight"
                            android:paddingTop="@dimen/shape_padding_TopBottom"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/activity_margin_min"
                                android:layout_marginRight="@dimen/activity_margin_max"
                                android:layout_marginTop="@dimen/activity_margin_min"
                                android:src="@drawable/ic_graph"
                                android:visibility="visible" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/activity_margin_min"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_min_padding"
                            android:paddingTop="@dimen/activity_min_padding">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imageView19"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/ic_hardware_keyboard_arrow_right" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/lblTotal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="TOTAL"
                                        android:textColor="@color/color_total"
                                        android:textSize="@dimen/abc_text_size_small_material" />

                                    <TextView
                                        android:id="@+id/lblBillsDue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="BILLS DUE"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:textIsSelectable="false"
                                        android:textSize="@dimen/abc_text_size_headline_material" />
                                </LinearLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/lbl_currency_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom"
                                    android:layout_marginRight="@dimen/activity_margin_min"
                                    android:gravity="center"
                                    android:text="PHP"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/abc_text_size_small_material" />

                                <estansaas.fonebayad.view.AutofitTextView
                                    android:id="@+id/txtTotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom"
                                    android:singleLine="true"
                                    android:text="0.00"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/abc_text_size_headline_material"
                                    autofit:minTextSize="8sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_transpera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:padding="@dimen/activity_margin_min">

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1.5"
                            android:src="@drawable/ic_transpera" />

                        <TextView
                            android:id="@+id/lbl_currency_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"
                            android:gravity="center"
                            android:text="PHP"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/abc_text_size_menu_material"
                            android:visibility="gone" />

                        <estansaas.fonebayad.view.AutofitTextView
                            android:id="@+id/txtTranspera"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"
                            android:layout_marginRight="@dimen/activity_margin_min"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="0.00"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/abc_text_size_large_material"
                            autofit:minTextSize="8sp" />

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:src="@drawable/ic_hardware_keyboard_arrow_right" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btnAddBill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_color"
                    android:padding="@dimen/activity_min_padding"
                    android:text="ADD BILL"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/abc_text_size_large_material" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
