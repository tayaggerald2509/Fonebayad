<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ededed">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="fonebayad"
        android:id="@+id/lblFone"
        android:textColor="@color/app_color"
        android:textSize="@dimen/abc_text_size_display_2_material"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_above="@+id/lblSubText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tap to Pay"
        android:id="@+id/lblSubText"
        android:textColor="@color/app_color"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_above="@+id/root"
        android:layout_marginBottom="@dimen/activity_margin_max" />

    <FrameLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_margin_30dp" />

</RelativeLayout>