<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="1dp" android:left="0dp" android:bottom="1dp" android:right="0dp">
        <shape android:shape="rectangle">
            <size android:height="1dp"/>
            <stroke android:color="@android:color/darker_gray" android:width="1dp" android:dashGap="1dp" android:dashWidth="1dp" />
            <corners android:bottomLeftRadius="@dimen/button_radius" android:bottomRightRadius="@dimen/button_radius" />
        </shape>
    </item>
    <item android:top="0dp" android:left="0dp" android:bottom="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/app_subtext_color"/>
            <corners android:bottomLeftRadius="@dimen/button_radius" android:bottomRightRadius="@dimen/button_radius" />
        </shape>
    </item>
</layer-list>